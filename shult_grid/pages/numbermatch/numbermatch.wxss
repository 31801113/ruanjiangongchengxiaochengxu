page{
  height:100%;
}
.gift{
  width: 100%;
  height: 100%;
  position:flex-start; 
  justify-content: center;
  align-items:center;
  z-index: -1;
 }
.button{
  border: none;
  width: 300px;
  height: 100px;
  position: relative;
}
.button::after{
  border: none;
  width: 300px;
  height: 100px;
  position: relative;
}
.postion{
  display: flex; 
  justify-content: flex;
}
.font-settings {
  /*字体设置*/
  font-family: sans-serif;/*方正舒体*/
  font-weight: bold;
  font-size: 25px;
  text-align: flex;/*字体位置*/
  color: black;
}
.bf_input_down{
  display: block;
  width: 124px;
  height: 36px;
  background: url(https://s3.ax1x.com/2020/12/08/rp60pV.png) no-repeat ;
  background-size: 100% 120%;
  margin:20px auto;
  line-height: 36px;
  text-align: center;
  font-size: 18px;
  color: white;
}
.bf_input_down::after{ 
  border: none; 
}